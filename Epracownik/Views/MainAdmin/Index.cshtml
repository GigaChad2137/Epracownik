@model Epracownik.Controllers.MainAdmin.Status_Pracy
<style>
    .container {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .box {
        width: 1200px;
        height: 300px;
        margin: 10px;
        margin-top: 60px;
        text-align: center;
        border-radius: 25px;
        cursor: pointer;
        transition: all 0.3s ease-in-out;
    }

        .box:hover {
            transform: scale(1.1);
        }

    .blue {
        background-color: lightblue;
    }

    .red {
        background-color: lightcoral;
    }

    .yellow {
        background-color: lightyellow;
    }

    .green {
        background-color: lightgreen;
    }
    h2 {
        font-size: 30px;
        margin-top: 110px;
    }
</style>
<div class="container">

    <div class="box red" onclick="window.location.href='/mainadmin/wnioski'">
        <h2>Wnioski</h2>
    </div>
    <div class="box yellow" onclick="window.location.href='/mainadmin/pracownicy'">
        <h2>Pracownicy</h2>
    </div>
    <div class="box green" onclick="window.location.href='/mainadmin/dodajpracownika'">
        <h2>Dodaj Pracownika</h2>
    </div>
    <div class="box blue" onclick="window.location.href='/Status_Praca'">

        <h2>@Model.Status_pracy</h2>
    </div>
</div>