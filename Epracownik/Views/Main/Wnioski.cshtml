@model List<Epracownik.Controllers.Main.WnioskiDoRozpatrzeniaModel>
    <style>
        table {
            width: 80%;
            margin: 20px auto;
            border-collapse: collapse;
            text-align: center;
        }

        table, th, td {
            border: 1px solid black;
            padding: 10px;
        }

        th {
            background-color: #ddd;
            font-weight: bold;
        }

        td {
            background-color: #f5f5f5;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        tr:hover {
            background-color: #e9e9e9;
        }
    </style>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Wniosek</th>
            <th>Data Rozpoczęcia</th>
            <th>Data Zakończenia (Włącznie)</th>
            <th>Notka</th>
            <th>Kwota</th>
            <th>Status Wniosku</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var wniosek in Model)
        {
        <tr>
            <td>@wniosek.TypWniosku</td>
            <td>@wniosek.DataRozpoczecia.ToString("dd/MM/yyyy")</td>
            <td>@wniosek.DataZakonczenia.ToString("dd/MM/yyyy")</td>
            <td>@wniosek.Notka</td>
            <td>@wniosek.Kwota</td>
            <td>@wniosek.Status_Wniosku</td>
        </tr>
        }
        </tbody>
</table>