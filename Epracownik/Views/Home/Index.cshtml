@{
    Layout =null;
}

<html>
<head>
    <!-- ... -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css"
          integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <!-- ... -->
    <style>
        <!-- CSS file -->
        .btn-primary {
            background-color: #343a40;
            border-color: #343a40;
        }

        input {
            border-radius: 0;
            border-color: #343a40;
            transition: box-shadow 0.3s;
        }

            input:focus {
                box-shadow: 0 0 0 0.2rem rgba(52, 58, 64, 0.25);
            }

        #Login_button {
            border-radius: 25px;
            padding: 10px 20px;
            color: white;
            font-weight: bold;
            transition: all 0.3s ease;
        }

            #Login_button:hover {
                background-color: #cc0000;
            }

        .d-flex align-items-center {
            background-color: whitesmoke;
            background-image: radial-gradient(circle at 20% 20%, rgba(255, 255, 255, 0.15) 0%, rgba(0, 0, 0, 0.15) 100%), radial-gradient(circle at 80% 80%, rgba(255, 255, 255, 0.1) 0%, rgba(0, 0, 0, 0.1) 100%), radial-gradient(circle at 50% 50%, rgba(255, 255, 255, 0.05) 0%, rgba(0, 0, 0, 0.05) 100%);
            background-blend-mode: multiply;
        }
    </style>
</head>
<body>
    <div class="d-flex align-items-center" style="background-color: white; min-height: 100vh;">
        <div class="container">
            <div class="row">
                <div class="col-md-6 offset-md-3">
                    <div class="card p-4">
                        <h1 class="text-center">Logowanie</h1>
                        <form asp-action="Index" method="POST">
                            <div class="form-group">
                                <label for="username">Nazwa użytkownika</label>
                                <input type="text" class="form-control rounded-0" name="username" id="username" placeholder="Wprowadź nazwę użytkownika">
                            </div>
                            <div class="form-group">

                                <label for="password">Hasło</label>
                                <input type="password" class="form-control rounded-0" name="password" id="password" placeholder="Wprowadź hasło">
                            </div>
                            <button id="Login_button" type="submit" class="btn btn-primary btn-block rounded-1">Zaloguj</button>
                        </form>
                        @if (ViewData["Message"] != null)
                        {
                            <div class="alert alert-danger">
                                @ViewData["Message"]
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>



</html>