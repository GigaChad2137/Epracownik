<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]E-Pracownik</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
   <style>
       .navbar {
           background-color: #343a40;
       }

           .navbar a {
               color: white;
           }

               .navbar a:hover,
               .navbar a:focus {
                   color: #5bc0de;
               }
        body {
            background-color:whitesmoke;
        }
       .bg-dark {
           background-color: #343a40;
       }
       footer {
           position: absolute;
           bottom: 0;
           width: 100%;
           background-color: #343a40;
           height:60px;
       }

       .text-center {
           text-align: center;
       }

       .text-white {
           color: white;
       }
   </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <a class="nav-link" asp-controller="Main" asp-action="Index">Home <span class="sr-only">(current)</span></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">

                    <li class="nav-item active">
                        <a class="nav-link" asp-controller="AddWniosek" asp-action="Index">Wyślij wniosek</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" asp-controller="EwidencjaPracy" asp-action="Index">Ewidencja Pracy</a>
                    </li>
                    <li class="nav-item active" style="position:absolute; right:0;" >
                        <a class="nav-link" asp-controller="Logout" asp-action="Index">
                           Wyloguj
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
            @RenderBody()
    <footer class="bg-dark py-3">
            <p class="text-center text-white">Copyright &copy; Klaudiusz Kolegowicz E-pracownik 2023</p>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
